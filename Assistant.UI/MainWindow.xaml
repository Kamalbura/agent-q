<Window x:Class="Assistant.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Astra Overlay"
        Height="260"
        Width="460"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#F0333333"
        Foreground="White"
        ShowInTaskbar="False"
        Opacity="0.95">
    <Border CornerRadius="12" Background="#FF1E1E1E" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Ask Astra" FontSize="16" FontWeight="Bold" />

            <TextBox x:Name="PromptTextBox"
                     Grid.Row="1"
                     Margin="0,12,0,12"
                     Padding="10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FF2B2B2B"
                     BorderBrush="#FF444444"
                     Foreground="White" />

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="StatusTextBlock"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           Opacity="0.8"
                           Text="Ready" />
                <Button x:Name="ListenButton"
                        Width="110"
                        Height="36"
                        Content="Listen"
                        Click="OnListenClicked" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
